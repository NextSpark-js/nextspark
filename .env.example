# ENVIRONMENT
# =============================================================================
NODE_ENV=development
PORT=3000

# =============================================================================
# APP CONFIGURATION
# =============================================================================
NEXT_PUBLIC_APP_NAME="NextSpark App"

# =============================================================================
# VERCEL
# =============================================================================
VERCEL_TEAM=
VERCEL_PROJECT=

# =============================================================================
# SUPERADMIN
# =============================================================================
SUPERADMIN_API_KEY=

# =============================================================================
# DEBUG SETTINGS
# =============================================================================
NEXT_PUBLIC_RQ_DEVTOOLS=false
NEXT_DISPLAY_DEBUGGER=false

# =============================================================================
# PWA
# =============================================================================
NEXT_PUBLIC_PWA_ENABLED=true

# =============================================================================
# SCHEDULED ACTIONS
