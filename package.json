{
  "name": "nextspark-monorepo",
  "private": true,
  "version": "0.1.0-beta.54",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "pnpm --filter @nextsparkjs/dev dev",
    "build": "pnpm --filter @nextsparkjs/dev build",
    "build:core": "pnpm --filter @nextsparkjs/core build",
    "build:cli": "pnpm --filter @nextsparkjs/cli build",
    "lint": "pnpm --filter @nextsparkjs/dev lint",
    "clean": "pnpm -r exec rm -rf node_modules dist .next",
    "setup:local": "./scripts/setup/local.sh",
    "setup:npm": "./scripts/setup/npm.sh",
    "setup:update-local": "./scripts/setup/update-local.sh",
    "setup:claude": "./scripts/setup/claude.sh",
    "pkg:version": "./scripts/packages/version.sh",
    "pkg:pack": "./scripts/packages/pack.sh --all --clean",
    "pkg:publish": "./scripts/packages/publish.sh ./.packages",
    "cy:open": "node packages/core/scripts/test/cy.mjs open",
    "cy:run": "node packages/core/scripts/test/cy.mjs run",
    "cy:tags": "node packages/core/scripts/test/cy.mjs tags",
    "test:core": "pnpm --filter @nextsparkjs/core test",
    "test:theme": "node packages/core/scripts/test/jest-theme.mjs",
    "db:drop": "cd apps/dev && node scripts/drop-all-tables.mjs",
    "db:migrate": "cd apps/dev && node ../../packages/core/scripts/db/run-migrations.mjs",
    "db:reset": "cd apps/dev && node scripts/drop-all-tables.mjs && node ../../packages/core/scripts/db/run-migrations.mjs",
    "mobile:install": "cd apps/mobile && pnpm install",
    "mobile:start": "cd apps/mobile && pnpm start",
    "mobile:web": "cd apps/mobile && pnpm run web"
  },
  "devDependencies": {
    "@cypress/grep": "^5.0.1",
    "@testing-library/cypress": "^10.1.0",
    "allure-cypress": "^3.0.0",
    "cypress": "^15.8.2",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^11.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@tailwindcss/container-queries": "^0.1.1",
    "pg": "^8.16.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
