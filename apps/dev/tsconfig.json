{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@nextsparkjs/core": ["../../packages/core/src/index.ts"],
      "@nextsparkjs/core/*": ["../../packages/core/src/*"],

      "@nextsparkjs/plugin-ai": ["../../plugins/ai/index.ts"],
      "@nextsparkjs/plugin-ai/*": ["../../plugins/ai/*"],
      "@nextsparkjs/plugin-langchain": ["../../plugins/langchain/index.ts"],
      "@nextsparkjs/plugin-langchain/*": ["../../plugins/langchain/*"],
      "@nextsparkjs/plugin-amplitude": ["../../plugins/amplitude/index.ts"],
      "@nextsparkjs/plugin-amplitude/*": ["../../plugins/amplitude/*"],
      "@nextsparkjs/plugin-social-media-publisher": ["../../plugins/social-media-publisher/index.ts"],
      "@nextsparkjs/plugin-social-media-publisher/*": ["../../plugins/social-media-publisher/*"],

      "@nextsparkjs/theme-default": ["../../themes/default/index.ts"],
      "@nextsparkjs/theme-default/*": ["../../themes/default/*"],
      "@nextsparkjs/theme-blog": ["../../themes/blog/index.ts"],
      "@nextsparkjs/theme-blog/*": ["../../themes/blog/*"],
      "@nextsparkjs/theme-crm": ["../../themes/crm/index.ts"],
      "@nextsparkjs/theme-crm/*": ["../../themes/crm/*"],
      "@nextsparkjs/theme-productivity": ["../../themes/productivity/index.ts"],
      "@nextsparkjs/theme-productivity/*": ["../../themes/productivity/*"],

      "@nextsparkjs/registries": ["./.nextspark/registries/index.ts"],
      "@nextsparkjs/registries/*": ["./.nextspark/registries/*"],

      "@/core/*": ["../../packages/core/src/*"],
      "@/contents/*": ["./contents/*"],
      "@/themes/*": ["./contents/themes/*"],
      "@/plugins/*": ["./contents/plugins/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".nextspark",
    "app",
    "contents",
    "next-env.d.ts",
    "src",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**",
    "**/jest.setup.ts",
    "**/jest.config.ts",
    "**/cypress/**",
    "**/tests/**",
    "cypress.config.ts",
    "contents/themes/blog/**",
    "contents/themes/crm/**",
    "contents/themes/productivity/**",
    "contents/themes/plugin-sandbox/**"
  ]
}
