{
  "name": "@amplitude-plugin/core",
  "version": "1.0.0",
  "description": "Advanced user analytics and behavioral tracking plugin for SaaS applications",
  "main": "plugin.config.ts",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "dev": "tsc --watch"
  },
  "keywords": [
    "amplitude",
    "analytics",
    "tracking",
    "user-behavior",
    "a-b-testing",
    "session-replay",
    "gdpr",
    "plugin",
    "saas"
  ],
  "author": "SaaS Team",
  "license": "MIT",
  "dependencies": {
    "zod": "^3.22.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/user-event": "^14.4.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/$1",
      "^@core/(.*)$": "<rootDir>/../../core/$1"
    },
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/__tests__/**/*.test.tsx"
    ],
    "collectCoverageFrom": [
      "lib/**/*.ts",
      "hooks/**/*.ts",
      "providers/**/*.tsx",
      "components/**/*.tsx",
      "types/**/*.ts",
      "utils/**/*.ts",
      "!**/*.d.ts",
      "!**/__tests__/**",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testTimeout": 10000
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NextSpark-dev/nextspark.git",
    "directory": "contents/plugins/amplitude"
  },
  "bugs": {
    "url": "https://github.com/NextSpark-dev/nextspark/issues"
  },
  "homepage": "https://github.com/NextSpark-dev/nextspark/tree/main/contents/plugins/amplitude#readme",
  "files": [
    "lib/",
    "hooks/",
    "providers/",
    "components/",
    "types/",
    "utils/",
    "translations/",
    "styles/",
    "plugin.config.ts",
    "README.md"
  ]
}
