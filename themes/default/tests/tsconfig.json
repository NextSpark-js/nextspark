{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["cypress", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["../../../*"]
    }
  },
  "include": [
    "cypress/**/*.ts",
    "cypress.config.ts"
  ]
}
