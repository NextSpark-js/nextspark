{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["../../../*"],
      "@/core/*": ["../../../core/*"],
      "@/contents/*": ["../../../contents/*"],
      "~/*": ["./*"]
    }
  },
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": false,
    "excludeDirectories": [
      "**/node_modules",
      "**/.next",
      "**/dist",
      "**/build",
      "**/.turbo",
      "**/coverage",
      "**/.git"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "plugin.config.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "build",
    ".turbo",
    "coverage",
    ".git",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**",
    "**/tsconfig.tsbuildinfo"
  ]
}