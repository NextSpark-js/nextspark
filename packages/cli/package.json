{
  "name": "@nextsparkjs/cli",
  "version": "0.3.0",
  "description": "CLI for NextSpark - wrap core scripts with a professional interface",
  "type": "module",
  "bin": {
    "nextspark": "./bin/nextspark.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsup src/cli.ts --format esm --dts --outDir dist",
    "dev": "tsup src/cli.ts --format esm --watch"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0"
  },
  "devDependencies": {
    "@nextsparkjs/core": "workspace:*",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "peerDependencies": {
    "@nextsparkjs/core": ">=0.3.0"
  },
  "keywords": [
    "nextspark",
    "cli",
    "nextjs",
    "saas",
    "boilerplate"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nextsparkjs/nextspark.git",
    "directory": "packages/cli"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
