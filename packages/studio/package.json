{
  "name": "@nextsparkjs/studio",
  "version": "0.1.0-alpha.1",
  "description": "NextSpark Studio - AI-powered SaaS app builder",
  "type": "module",
  "bin": {
    "nextspark-studio": "./bin/studio.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts --outDir dist",
    "dev": "tsup src/index.ts src/cli.ts --format esm --watch",
    "studio": "node --loader ts-node/esm src/cli.ts",
    "test": "tsx src/cli.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.42",
    "chalk": "^5.3.0",
    "ora": "^8.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "nextspark",
    "studio",
    "ai",
    "saas",
    "app-builder",
    "no-code"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NextSpark-js/nextspark.git",
    "directory": "packages/studio"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
