{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["cypress", "node"],
    "baseUrl": ".",
    "paths": {
      "@/contents/*": ["./contents/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "cypress.d.ts",
    "contents/themes/*/tests/cypress/**/*.ts",
    "contents/plugins/*/tests/cypress/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
